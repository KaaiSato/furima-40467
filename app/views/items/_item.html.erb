<li class='list'>  
  <div class='item-img-content'>
          <%= link_to image_tag(item.image, class: "item-img"),item_path(item.id)  %>

     <% if Order.exists?(item_id: item.id) %>
        <div class='sold-out'>
            <span>Sold Out!!</span>
        </div> 
      <% end %>

  </div>
  <div class='item-info'>
     <h3 class='item-name'>
       <%= item.name %>
      </h3>
      <div class='item-price'>
       <span><%= item.price %>å††<br><%= item.shipping_fee.name %></span>
         <div class='star-btn'>
            <%= image_tag "star.png", class:"star-icon" %>
            <span class='star-count'>0</span>
        </div>
      </div>
  </div>
 </li>